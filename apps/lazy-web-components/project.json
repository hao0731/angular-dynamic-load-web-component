{
  "name": "lazy-web-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "hao-lab",
  "sourceRoot": "apps/lazy-web-components/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/lazy-web-components",
        "index": "apps/lazy-web-components/src/index.html",
        "main": "apps/lazy-web-components/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/lazy-web-components/tsconfig.app.json",
        "assets": [
          "apps/lazy-web-components/src/favicon.ico",
          "apps/lazy-web-components/src/assets",
          {
            "input": "dist/libs/web-components/rainbow-block/",
            "glob": "rainbow-block.js",
            "output": "/assets/webComponents/"
          }
        ],
        "styles": ["apps/lazy-web-components/src/styles.scss"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "lazy-web-components:build:production"
        },
        "development": {
          "browserTarget": "lazy-web-components:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "lazy-web-components:build"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/lazy-web-components/**/*.ts",
          "apps/lazy-web-components/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/lazy-web-components/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}
